{
  "openapi": "3.0.0",
  "info": {
    "title": "Task API",
    "version": "1.0.0",
    "description": "A simple Task API"
  },
  "paths": {
    "/{email}/todo": {
      "get": {
        "summary": "Get all tasks by email",
        "description": "Get all tasks by user's email",
        "tags": ["Task"],
        "parameters": [{
          "in": "path",
          "name": "email",
          "description": "User's email",
          "required": true,
          "type": "string"
        }],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "post": {
        "summary": "Add tasks by email",
        "description": "Add tasks by user's email",
        "tags": ["Task"],
        "parameters": [
          {
            "in": "path",
            "name": "email",
            "description": "User's email",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Task details to add",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/task"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "task": {
        "type": "object",
        "properties": {
          "task": {
            "type": "string"
          },
          "completed": {
            "type": "boolean"
          }
        }
      }
    }
  }
}
